@section Styles {
    <link rel="stylesheet" href="~/css/daterange.min.css" />
}

<section style="margin-top:25px">
<div id="center" class="center w-clear margin2s">
    <div class="hidden-xs hidden-sm">
        <aside class="g_quarter col-md-3 col-lg-3 col-xs-12 col-sm-12">
            <div class="sidebar-left">
                <ul class="sidebar-menu"></ul>
            </div>
        </aside>
    </div>
    <div class="col-md-5 col-lg-5 col-xs-12 col-sm-12 ldangnhap content_area g_left_pad news-content">
        <div class="main-tit"><h2>Đăng kí</h2></div>
        <div class="frm-tit">
            <form name="dangky"
                  action="/Account/Register"
                  method="post"
                  class="form-horizontal"
                  onsubmit="$('#btn-dangnhap').val('Vui lòng đợi...')">
                  @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="field-name">Tên tài khoản <span class="req">*</span></label>
                    <input class="form-control"
                           type="number"
                           placeholder="Nhập số điện thoại"
                           name="Sdt"
                           required="" />
                </div>
                 <div class="form-group">
                    <label class="field-name">Tên người dùng<span class="req">*</span></label>
                    <input class="form-control"
                           type="text"
                           placeholder="Nhập tên người dùng"
                           name="UserName"
                           required="" />
                </div>
                <div class="form-group">
                    <label class="field-name">Ngày sinh<span class="req">*</span></label>
                        <input class="form-control k-textbox date-range date-single-only-range"
                            type="text"
                            id="date-range-dk"
                            name="NgaySinh"
                            required="" />
                </div>
                <div class="form-group">
                    <label class="field-name">Địa chỉ<span class="req">*</span></label>
                    <input class="form-control"
                            type="text"
                            placeholder="Nhập địa chỉ"
                            name="DiaChi"
                            required="" />
                </div>
                <div class="form-group">
                    <label class="field-name">Mật khẩu <span class="req">*</span></label>
                    <input class="form-control"
                            type="password"
                            placeholder="Nhập mật khẩu"
                            id="password"
                            name="PassWord"
                            required="" />
                </div>

                @* <div class="form-group">
                    <label class="field-name">Nhập lại mật khẩu <span class="req">*</span></label>
                    <input class="form-control"
                            type="password"
                            placeholder="Nhập lại mật khẩu"
                            id="confirmPassword"
                            name="confirmPassword"
                            required="" />
                </div> *@
               
                <div class="form-group form-footer">
                    <p>
                        Bạn đã có tài khoản?
                        <a asp-action="Index" >Đăng nhập</a>
                    </p>
                    <input class="btn btn-default"
                           id="btn-dangki"
                           type="submit"
                           value="Đăng kí" />

                </div>
                <input type="hidden" name="dangnhap" />
            </form>
        </div>
    </div>
    <div class="hidden-md hidden-lg">
        <aside class="g_quarter col-md-3 col-lg-3 col-xs-12 col-sm-12">
            <div class="sidebar-left">
                <ul class="sidebar-menu"></ul>
            </div>
        </aside>
    </div>
</div>
    <div class="toast text-bg-success" style="position: absolute; top: 40px; right: 0; background-color: white;">
        <div class="d-flex">
            <div class="toast-body">
                Hello, world! This is a toast message.
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
@section Scripts {
    <script src="~/js/account-bundle.min.js"></script>
    <script src="~/js/daterange.min.js"></script>
        <script>
            $(document).ready(function () {
                var message = "@Html.Raw(TempData["Message"])";
                $(".toast-body").text(message);
                if (message.length > 0) {
                    const toast = new bootstrap.Toast($(".toast"));
                    toast.show();
                }
            });
        </script>
}
</section>
